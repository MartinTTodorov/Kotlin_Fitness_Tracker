<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/Bland"
    >


    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Welcome to FitPulse"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/stepIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/step"
        android:contentDescription="@string/step_icon_description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/totalStepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Total Steps: 0"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/sunriseIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sunrise"
        android:contentDescription="@string/sunrise_icon_description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/morningStepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Morning Steps: 0"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/sunIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sun"
        android:contentDescription="@string/sun_icon_description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/dayStepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Day Steps: 0"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        >

        <ImageView
            android:id="@+id/calorieIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/calories"
            android:contentDescription="@string/calorie_icon_description"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/totalCaloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="0 kcal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/kilometerIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person"
            android:contentDescription="@string/kilometer_icon_description"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/totalKilometersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="0 km"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


</LinearLayout>




